<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    android:orientation="horizontal">


    <androidx.cardview.widget.CardView
        android:layout_width="165dp"
        android:layout_height="wrap_content"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="15dp"
        app:cardUseCompatPadding="true"
        app:contentPadding="12dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ToggleButton
                android:id="@+id/favorite_toggle_button"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/favorite_button"
                android:textColor="@android:color/transparent" />

            <ImageView
                android:id="@+id/product_imageview"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_marginTop="15dp"
                android:scaleType="fitCenter"
                tools:src="@tools:sample/avatars" />

            <TextView
                android:id="@+id/product_title_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Asus zen - i7 - 6Th-8Ram
500 SSD - GTX 2020"
                android:textColor="@color/black"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/product_price_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="70959 SAR"
                android:textColor="@android:color/holo_blue_bright" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>